{
    "name": "Todo",
    "description": "test ACL model",
    "idInjection": false,
    "properties": {
        "todoName":{
            "type": "string",
            "required": true,
            "defaultFn": "uuid"
        },
        "todoDesrc":{
            "type": "string",
            "required": false
        },
        "userId":{
            "type": "string",
            "required": false
        }
    },
    "relations":{
        "user": {
            "type": "belongsTo", 
            "model": "User",
            "foreignKey": "userId"
        }
    },
    "acls":[
        {
           "accessType": "*", 
           "principalType": "ROLE",
           "principalId": "$everyone",
           "permission": "DENY"
        }, 
        {
           "accessType": "READ", 
           "principalType": "ROLE",
           "principalId": "$owner",
           "permission": "ALLOW",
           "property": ["find", "count"]
        }, 
        {
           "accessType": "READ", 
           "principalType": "USER",
           "principalId": "56a56a8f86f5736248d3e4cc",
           "permission": "ALLOW",
           "property": "findById"
        }, 
        {
           "accessType": "READ", 
           "principalType": "ROLE",
           "principalId": "$authenticated",
           "permission": "ALLOW",
           "property": "testAclOwnerFind"
        }, 
        {
           "accessType": "READ", 
           "principalType": "ROLE",
           "principalId": "$unauthenticated",
           "permission": "ALLOW",
           "property": ["testCreateRole", "testCreateRoleUser"]
        }
    ]
}
